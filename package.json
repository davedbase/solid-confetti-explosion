  "author": "David Di Biase",
  "repository": {
    "type": "git",
    "url": "git+https://davedbase@github.com/davedbase/solid-confetti-explosion.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/davedbase/solid-confetti-explosion/issues"
  },
